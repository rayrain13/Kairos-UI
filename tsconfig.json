{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["packages/components/*"],
      "@theme-chalk/*": ["packages/theme-chalk/*"],
      "@utils/*": ["packages/utils/*"]
    },
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "target": "es6",
    "module": "esnext",
    "jsx": "preserve"
  },
  "include": [
    "packages/**/*",
    "build/**/*",
    "examples/**/*",
    "rollup.config.js",
    "shims-vue.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
